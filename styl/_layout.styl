jeet['gutter'] = 3

html
    body
        padding 0
        margin 0
        font-family "Trebuchet MS", Helvetica, sans-serif
        font-size 1.2em
        gradient: $grey $silver 50%
        color $black
        +below(rupture.desktop-cutoff)
            font-size 1em
        +below(rupture.mobile-cutoff)
            font-size 0.85em
        cf()

.row
    center(95%)
    
section > div, p
    padding  0 1em 0 1em
    
#header
    span(1)
    height 3em
    background $black
    box-shadow none
    border-radius 0
    position fixed
    z-index 1

section
    col(1)
    box-shadow 5px 5px 15px -5px rgba(247,0,0,1)       
    border-radius 0.8em
    margin 1em 0 1em 0
    background-color $white            
#body
    margin-top 3em
    center(100%)

.half
    col(1/2)
    +below(rupture.mobile-cutoff)
        col(1)

.onethird
    col(1/3)
    +below(rupture.mobile-cutoff)
        col(1)

.twothird
    col(2/3)
    +below(rupture.mobile-cutoff)
        col(1)


.onequarter
    col(1/4)
    +below(rupture.desktop-cutoff)
        col(1/2,  uncycle: 4, cycle: 2)
    +below(rupture.mobile-cutoff)
        col(1)



h1 
h2 
h3 
h4
h5 
h6
    color $red