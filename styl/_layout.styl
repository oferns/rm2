
html
    body
        padding 0
        margin 0
        font-family  Arial, "Helvetica Neue", Helvetica, sans-serif
        font-size 1.2em
        background-color $dblue
        color $white
        +below(rupture.desktop-cutoff)
            font-size 1em
        +below(rupture.mobile-cutoff)
            font-size 0.85em
        cf()

header
    width 100%
    font-size 1.5em
    line-height 2em
    z-index 1
    text-align center
    +below(rupture.desktop-cutoff)
        font-size 1.25em
    a
        img
            position absolute
            top 0.25em
            left 0.25em
            vertical-align middle
            height 1.5em
            margin-right 0.75em
            +below(rupture.desktop-cutoff)
                margin-right 0.5em
            +below(rupture.mobile-cutoff)
                margin-right 0.25em
    span
        a 
            position absolute
            top 0
            right 2em
            color $white
            text-decoration none
            font-size 0.5em
            font-weight bold
            &:after
                content '\f2c0'
                font-family FontAwesome
                padding-left 0.5em
                font-weight normal
                font-style normal

main
    col(1)
    height 100%
    &> *
        align(vertical)
        width 100%
    +above(rupture.mobile-cutoff)
        > *
            align(both)
            width auto
    +below(rupture.desktop-cutoff)
        center(98%)
.half
    col(1/2)
    +below(rupture.mobile-cutoff)
        col(1)

.halfspan
    span(1/2)
    +below(rupture.mobile-cutoff)
        span(1)


.onethird
    col(1/3)
    +below(rupture.mobile-cutoff)
        col(1)
        
.onethirdspan
    span(1/3)
    +below(rupture.mobile-cutoff)
        span(1)

.twothird
    col(2/3)
    +below(rupture.mobile-cutoff)
        col(1)

.twothirdspan
    span(2/3)
    +below(rupture.mobile-cutoff)
        span(1)

.onequarter
    col(1/4)
    +below(rupture.desktop-cutoff)
        col(1/2,  uncycle: 4, cycle: 2)
    +below(rupture.mobile-cutoff)
        col(1)


