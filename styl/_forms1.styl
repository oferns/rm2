form
    fieldset
        border none
        padding 1em 0 1em 0
        legend
            padding 0
            margin 0
            width 100%
            text-transform uppercase
            font-size 1.25em
            line-height 1.25em
            text-align center
        section
            font-size 1em
            padding 0.25em
            margin 0.25em
            label
                display none
                &.error
                    display block
                    position absolute
                    width auto
                    left 95%
                    color $red
                    white-space no-wrap
                    margin-top 0.33em
                    font-size 0.9em
                    +below(rupture.mobile-cutoff)
                        left 50%
                        margin-top 3em            
        
        +html5-inputs()
            input($orange, 100%)

        input[type=submit]
             glossy-button($orange, 'medium', $white)